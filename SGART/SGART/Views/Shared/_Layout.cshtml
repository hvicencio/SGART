<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    <link href="~/Content/iconfonts/mdi/css/materialdesignicons.min.css" rel="stylesheet" />
    <link href="~/Content/iconfonts/puse-icons-feather/feather.css" rel="stylesheet" />
    <link href="~/Content/main/vendor.bundle.base.css" rel="stylesheet" />
    <link href="~/Content/main/vendor.bundle.addons.css" rel="stylesheet" />
    <link href="~/Content/icheck/skins/all.css" rel="stylesheet" />
    <link href="~/Content/iconfonts/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/shared/style.css" rel="stylesheet" />
    <link href="~/Content/demo_1/style.css" rel="stylesheet" />
</head>
<body>
    <div class="container-scroller">
        <!-- partial:partials/_navbar.html -->
        <nav class="navbar default-layout col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-top justify-content-center">
                <a class="navbar-brand brand-logo" href="index.html">
                    <img src="~/images/codelco.jpg" class="img-fluid" />
                </a>

            </div>
            <div class="navbar-menu-wrapper d-flex align-items-center pl-0">
                <!--
                <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                    <span class="mdi mdi-menu"></span>
                </button>
                    -->
                <ul class="navbar-nav navbar-nav-left header-links d-none d-md-flex p-0">
                    <li class="nav-item" id="linkDashboardAdmin">
                        <a href="@Url.Action("Index","DashboardAdmin")" class="nav-link font-weight-bold">
                            <i class="mdi mdi-airplay"></i>Dashboard
                        </a>
                    </li>
                    
                    
                </ul>
                <ul class="navbar-nav navbar-nav-right">


                    @*<li class="nav-item d-none d-lg-block color-setting">
                            <a class="nav-link" href="#">
                                <i class="mdi mdi-tune"></i>
                            </a>
                        </li>*@
                    <li class="nav-item dropdown d-none d-xl-inline-block">
                        <a class="nav-link dropdown-toggle font-weight-bold" id="UserDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
                            Hola, Administrador
                            <img class="img-xs rounded-circle ml-3" src="~/images/admin.png" alt="Profile image">
                        </a>
                        <div class="dropdown-menu dropdown-menu-right navbar-dropdown" aria-labelledby="UserDropdown">
                            <a class="dropdown-item p-0">
                                <div class="d-flex border-bottom">
                                    <div class="py-3 px-4 d-flex align-items-center justify-content-center">
                                        <i class="mdi mdi-bookmark-plus-outline mr-0 text-gray"></i>
                                    </div>
                                    <div class="py-3 px-4 d-flex align-items-center justify-content-center border-left border-right">
                                        <i class="mdi mdi-account-outline mr-0 text-gray"></i>
                                    </div>
                                    <div class="py-3 px-4 d-flex align-items-center justify-content-center">
                                        <i class="mdi mdi-close-box mr-0 text-gray"></i>
                                    </div>
                                </div>
                            </a>

                            <a class="dropdown-item mt-3 mb-2 poin" style="cursor:pointer;"
                               data-toggle="modal" data-target="#modal-password" data-backdrop="static"
                               data-keyboard="false">Cambiar Password</a>

                            <a class="dropdown-item" style="cursor:pointer;"> Cerrar Sesion </a>
                        </div>
                    </li>
                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                    <span class="icon-menu"></span>
                </button>
            </div>
        </nav>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">


            <!-- partial -->
            <!-- partial:partials/_sidebar.html -->
            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">
                    <li class="nav-item nav-profile">
                        <div class="nav-link pb-0">
                            <div class="user-wrapper">
                                <div class="profile-image">
                                    <img src="~/images/admin.png" />
                                </div>
                                <div class="text-wrapper">
                                    <p class="profile-name">Administrador</p>
                                    <div>
                                        <small class="designation text-muted">Administrador</small>
                                        <span class="status-indicator online"></span>
                                    </div>
                                </div>
                            </div>

                        </div>
                    <li class="nav-item">
                        <a class="nav-link collapsed" data-toggle="collapse" href="#gestion" aria-expanded="false" aria-controls="dashboard-dropdown">
                            <i class="menu-icon mdi mdi-human"></i>
                            <span class="menu-title font-weight-bold">Gestión</span>
                            <i class="menu-arrow"></i>
                        </a>
                        <div class="collapse" id="gestion" style="">
                            <ul class="nav flex-column sub-menu">
                                <li class="nav-item">
                                    <a class="nav-link" href="#">
                                        <i class="menu-icon mdi mdi-file-chart"></i>
                                        <span class="menu-title font-weight-bold">Reportes</span>
                                    </a>
                                </li>

                                <li class="nav-item" id="linkArt">
                                    <a class="nav-link" href="@Url.Action("Index","Art")">
                                        <i class="menu-icon mdi mdi-shield"></i>
                                        <span class="menu-title font-weight-bold">Gestión de Art</span>
                                    </a>
                                </li>


                                

                            </ul>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link collapsed" data-toggle="collapse" href="#administracion" aria-expanded="false" aria-controls="dashboard-dropdown">
                            <i class="menu-icon mdi mdi-book-open"></i>
                            <span class="menu-title font-weight-bold">Administración</span>
                            <i class="menu-arrow"></i>
                        </a>
                        <div class="collapse" id="administracion" style="">
                            <ul class="nav flex-column sub-menu">
                                <li class="nav-item">
                                    <a class="nav-link" href="#">
                                        <i class="menu-icon mdi mdi-animation"></i>
                                        <span class="menu-title font-weight-bold">Procedimientos</span>
                                    </a>
                                </li>
                                <li class="nav-item" id="linkCargos">
                                    <a class="nav-link" href="@Url.Action("Index","Cargo")">
                                        <i class="menu-icon mdi mdi-worker"></i>
                                        <span class="menu-title font-weight-bold">Cargos</span>
                                    </a>
                                </li>
                                <li class="nav-item" id="linkTurnos">
                                    <a class="nav-link" href="@Url.Action("Index","Turno")">
                                        <i class="menu-icon mdi mdi-bookmark"></i>
                                        <span class="menu-title font-weight-bold">Turnos</span>
                                    </a>
                                </li>
                                <li class="nav-item" id="linkRoles">
                                    <a class="nav-link" href="@Url.Action("Index","Rol")">
                                        <i class="menu-icon mdi mdi-account-card-details"></i>
                                        <span class="menu-title font-weight-bold">Roles</span>
                                    </a>
                                </li>
                                <li class="nav-item" id="linkEmpresas">
                                    <a class="nav-link" href="@Url.Action("Index","Empresa")">
                                        <i class="menu-icon mdi mdi-bank"></i>
                                        <span class="menu-title font-weight-bold">Empresas</span>
                                    </a>
                                </li>
                                <li class="nav-item" id="linkUsuarios">
                                    <a class="nav-link" href="@Url.Action("Index","Empleado")">
                                        <i class="menu-icon mdi mdi-account-star"></i>
                                        <span class="menu-title font-weight-bold">Gestión de usuarios</span>
                                    </a>
                                </li>




                            </ul>
                        </div>
                    </li>
                    
                   
                </ul>
            </nav>
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                    <!-- plugins:js -->
                    <script src="~/Scripts/main/vendor.bundle.base.js"></script>
                    <script src="~/Scripts/main/vendor.bundle.addons.js"></script>
                    <!-- endinject -->

                    @RenderBody()

                </div>
                <!-- content-wrapper ends -->

            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- Plugin js for this page-->
    <!-- End plugin js for this page-->
    <!-- inject:js -->
    <script src="~/Scripts/shared/data-table.js"></script>

    <script src="~/Scripts/shared/off-canvas.js"></script>

    <script src="~/Scripts/shared/hoverable-collapse.js"></script>

    <script src="~/Scripts/shared/misc.js"></script>

    <script src="~/Scripts/shared/settings.js"></script>


    <script src="~/Scripts/shared/widgets.js"></script>

    <script src="~/Scripts/shared/tooltips.js"></script>

    <script src="~/Scripts/shared/modal-demo.js"></script>

    <!-- endinject -->
    <!-- Custom js for this page-->
    <script src="~/Scripts/demo_1/dashboard.js"></script>
    <!-- End custom js for this page-->
    @RenderSection("scripts", required: false)
</body>
</html>
